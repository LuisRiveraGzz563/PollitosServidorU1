<Window x:Class="PollitosServidorU1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PollitosServidorU1"
        xmlns:vm="clr-namespace:PollitosServidorU1.ViewModels"
        xmlns:models="clr-namespace:PollitosServidorU1.Models"
        xmlns:views="clr-namespace:PollitosServidorU1.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1250"
        >
    <Window.DataContext>
        <vm:CorralViewModel></vm:CorralViewModel>
    </Window.DataContext>
    
    <Window.Resources>
        <views:CorralView x:Key="Corral"></views:CorralView>
    </Window.Resources>
    
    <ContentControl>
        <ContentControl.Style>
            <Style TargetType="ContentControl">
                <Setter Property="Content" Value="{StaticResource Corral}"></Setter>
            </Style>
        </ContentControl.Style>
    </ContentControl>
</Window>